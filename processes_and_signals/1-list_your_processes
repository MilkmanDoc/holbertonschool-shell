#!/usr/bin/env bash
#notes

# Get the process tree using ps command
process_tree=$(ps axo pid,ppid,command)

# Display the process tree with hierarchy
echo "Process Tree:"
echo "$process_tree" | awk 'BEGIN{printf "%-10s %-10s %-s\n", "PID", "PPID", "COMMAND"} {printf "%-10s %-10s %-s\n", $1, $2, $3}'
echo
