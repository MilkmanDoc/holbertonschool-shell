#!/usr/bin/env bash
#notes

# Get the process tree using pstree command
process_tree=$(pstree -p)

# Display the process tree with hierarchy
echo "Process Tree:"
echo "$process_tree"
echo

# Get the list of all processes
all_processes=$(ps -eo pid,user,cmd --sort=user)

# Display the list of processes in a user-oriented format
echo "Running Processes:"
echo "$all_processes"
